<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cuenta Regresiva - Viaje a Cuba</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lato', sans-serif;
            background-color: #87CEEB;
            background-image: url('https://images.pexels.com/photos/1174732/pexels-photo-1174732.jpeg?auto=compress&cs=tinysrgb&w=1920');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 15px;
            position: relative;
            overflow: hidden;
        }

        /* Overlay sutil para mejorar legibilidad */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            pointer-events: none;
        }

        /* Contenedor principal */
        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 24px;
            padding: 200px 40px 30px 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            max-width: 900px;
            width: 100%;
            position: relative;
            z-index: 10;
            border: 3px solid #000000;
            animation: fadeIn 1s ease-out;
            max-height: 95vh;
            overflow-y: auto;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Bandera decorativa superior */
        .flag-decoration {
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            width: 300px;
            height: 150px;
            background: repeating-linear-gradient(
                to bottom,
                #002590 0%,
                #002590 20%,
                #FFFFFF 20%,
                #FFFFFF 40%,
                #002590 40%,
                #002590 60%,
                #FFFFFF 60%,
                #FFFFFF 80%,
                #002590 80%,
                #002590 100%
            );
            border-radius: 0 0 8px 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        /* Triángulo rojo de la bandera cubana */
        .flag-decoration::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 75px 0 75px 120px;
            border-color: transparent transparent transparent #CC0D0D;
        }

        /* Estrella blanca en el triángulo */
        .flag-decoration::after {
            content: '★';
            position: absolute;
            left: 30px;
            top: 50%;
            transform: translateY(-50%);
            color: white;
            font-size: 35px;
            z-index: 1;
        }

        /* Título principal */
        .title-section {
            text-align: center;
            margin-bottom: 15px;
        }

        .title-section h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.2em;
            font-weight: 700;
            color: #002590;
            margin-bottom: 10px;
            text-transform: none;
            letter-spacing: 1px;
        }

        .title-section .subtitle {
            font-size: 1.2em;
            color: #666;
            font-weight: 300;
            font-style: normal;
            margin-top: 10px;
            letter-spacing: 0.5px;
        }

        .title-section .destination {
            font-size: 2.2em;
            color: #002590;
            font-weight: 400;
            margin: 15px 0;
            font-family: 'Playfair Display', serif;
            font-style: italic;
        }

        /* Sección del contador */
        .countdown-section {
            margin: 15px 0;
        }

        .countdown-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-top: 15px;
        }

        .countdown-item {
            background: linear-gradient(135deg, #002590 0%, #0033a0 100%);
            border-radius: 15px;
            padding: 20px 15px;
            text-align: center;
            color: white;
            box-shadow: 0 10px 30px rgba(0, 37, 144, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .countdown-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .countdown-item:hover::before {
            left: 100%;
        }

        .countdown-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 37, 144, 0.4);
        }

        .countdown-number {
            font-size: 3.5em;
            font-weight: 700;
            font-family: 'Playfair Display', serif;
            line-height: 1;
            margin-bottom: 10px;
            color: #FFD700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .countdown-label {
            font-size: 1em;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 400;
            opacity: 0.9;
        }

        /* Contador alternativo (texto completo) */
        #contador {
            font-size: 2em;
            font-weight: 600;
            color: #002590;
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, rgba(0, 37, 144, 0.05) 0%, rgba(204, 13, 13, 0.05) 100%);
            border-radius: 15px;
            border: 2px solid #002590;
            margin: 30px 0;
            line-height: 1.8;
            display: none;
        }

        /* Fecha destacada */
        .date-section {
            text-align: center;
            margin: 15px 0;
            padding: 15px;
            background: linear-gradient(135deg, rgba(0, 37, 144, 0.05) 0%, rgba(204, 13, 13, 0.05) 100%);
            border-radius: 15px;
            border: 1px solid rgba(0, 37, 144, 0.15);
        }

        .date-section .date-label {
            font-size: 0.95em;
            color: #666;
            font-weight: 400;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 8px;
            font-size: 0.9em;
        }

        .date-section .date-value {
            font-size: 2em;
            font-weight: 400;
            color: #002590;
            font-family: 'Playfair Display', serif;
        }

        /* Mensaje motivacional */
        .message-section {
            text-align: center;
            margin-top: 15px;
            padding: 15px;
            background: rgba(0, 37, 144, 0.03);
            border-radius: 15px;
            border-left: 3px solid #002590;
        }

        .message-section p {
            font-size: 1.2em;
            color: #555;
            font-style: normal;
            line-height: 1.8;
            font-weight: 300;
        }

        .message-section .highlight {
            color: #002590;
            font-weight: 600;
        }

        /* Separador decorativo */
        .divider {
            width: 80px;
            height: 2px;
            background: linear-gradient(to right, transparent, #002590, transparent);
            margin: 15px auto;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                padding: 40px 30px;
            }

            .title-section h1 {
                font-size: 2.2em;
            }

            .title-section .destination {
                font-size: 1.5em;
                flex-direction: column;
                gap: 10px;
            }

            .countdown-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
            }

            .countdown-number {
                font-size: 2.5em;
            }

            .date-section .date-value {
                font-size: 1.6em;
            }

            .message-section p {
                font-size: 1.1em;
            }

            .flag-decoration {
                width: 250px;
                height: 120px;
            }

            .flag-decoration::before {
                border-width: 60px 0 60px 100px;
            }

            .flag-decoration::after {
                left: 25px;
                font-size: 28px;
            }
        }

        @media (max-width: 480px) {
            .countdown-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="flag-decoration"></div>
        
        <div class="title-section">
            <h1>Cuenta Regresiva</h1>
            <div class="destination">Viaje a Cuba</div>
            <p class="subtitle">Falta poco para que Marianita viaje a la Perla del Caribe</p>
        </div>

        <div class="divider"></div>

        <div class="countdown-section">
            <div class="countdown-grid" id="countdown-grid">
                <div class="countdown-item">
                    <div class="countdown-number" id="dias">0</div>
                    <div class="countdown-label">Días</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-number" id="horas">0</div>
                    <div class="countdown-label">Horas</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-number" id="minutos">0</div>
                    <div class="countdown-label">Minutos</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-number" id="segundos">0</div>
                    <div class="countdown-label">Segundos</div>
                </div>
            </div>
            <div id="contador"></div>
        </div>

        <div class="date-section">
            <div class="date-label">Fecha del Viaje</div>
            <div class="date-value">24 de Febrero, 2026</div>
        </div>

        <div class="message-section">
            <p>
                Prepárate para descubrir las <span class="highlight">playas de Varadero</span>, 
                la <span class="highlight">música cubana</span>, la <span class="highlight">arquitectura colonial</span> 
                y la <span class="highlight">calidez del pueblo cubano</span>. 
                La aventura está por comenzar.
            </p>
        </div>
    </div>

    <script>
        function actualizarContador() {
            const fechaObjetivo = new Date('2026-02-24T00:00:00');
            const ahora = new Date();
            const diferencia = fechaObjetivo - ahora;
            
            if (diferencia > 0) {
                const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
                const horas = Math.floor((diferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutos = Math.floor((diferencia % (1000 * 60 * 60)) / (1000 * 60));
                const segundos = Math.floor((diferencia % (1000 * 60)) / 1000);
                
                // Actualizar los números en las tarjetas
                document.getElementById('dias').textContent = dias;
                document.getElementById('horas').textContent = horas;
                document.getElementById('minutos').textContent = minutos;
                document.getElementById('segundos').textContent = segundos;
                
                // También actualizar el contador de texto (oculto por defecto)
                document.getElementById('contador').innerHTML = 
                    `${dias} días, ${horas} horas, ${minutos} minutos y ${segundos} segundos`;
            } else {
                document.getElementById('countdown-grid').innerHTML = 
                    '<div class="countdown-item" style="grid-column: 1 / -1; padding: 50px;">' +
                    '<div style="font-size: 2em; font-weight: 700; margin-bottom: 15px;">¡Ya llegó el día!</div>' +
                    '<div style="font-size: 1.3em; opacity: 0.9;">¡Buen viaje, Marianita!</div>' +
                    '</div>';
                document.getElementById('contador').innerHTML = '¡Ya llegó el día! ¡Buen viaje, Marianita!';
            }
        }
        
        actualizarContador();
        setInterval(actualizarContador, 1000);
    </script>
</body>
</html>
